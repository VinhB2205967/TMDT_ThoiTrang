header.header 
    .container
        .header-inner
            //- Logo
            .header-logo
                a(href="/")
                    i.bi.bi-bag-heart-fill.logo-icon
                    span.logo-text Fashion Store

            //- Search bar
            .header-search
                form.search-form(method="GET" action="/products")
                    .input-group
                        input.form-control(type="text" name="keyword" placeholder="Tìm kiếm sản phẩm..." value=keyword || '')
                        button.btn.btn-search(type="submit")
                            i.bi.bi-search

            //- Navigation & Actions
            .header-actions
                nav.header-nav
                    ul.nav-list
                        li: a(href="/") 
                            i.bi.bi-house-door
                            span Trang chủ
                        li: a(href="/products")
                            i.bi.bi-grid
                            span Sản phẩm
                        li: a(href="/orders")
                            i.bi.bi-bag-check
                            span Đã mua
                        li: a(href="/favorites")
                            i.bi.bi-heart
                            span Yêu thích
                        li: a(href="/cart")
                            i.bi.bi-cart3
                            span Giỏ hàng
                            span.cart-badge 0
                .auth-buttons
                    if isAuthenticated
                        .dropdown
                            a#userMenu.btn.btn-login.dropdown-toggle(href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false")
                                img(src=(user && user.avatar ? user.avatar : '/images/download.jpg') alt="avatar" style="width:28px;height:28px;border-radius:50%;object-fit:cover;" class="me-2")
                                span #{(user && user.hoten) ? user.hoten : 'Tài khoản'}
                            ul.dropdown-menu.dropdown-menu-end(aria-labelledby="userMenu")
                                if user && user.vaitro === 'admin'
                                    li
                                        a.dropdown-item(href=`${adminPath}`)
                                            i.bi.bi-shield-lock.me-2
                                            | Vào trang Admin
                                    li: hr.dropdown-divider
                                li
                                    form(method="POST" action="/auth/logout")
                                        button.dropdown-item(type="submit")
                                            i.bi.bi-box-arrow-right.me-2
                                            | Đăng xuất
                    else
                        a.btn.btn-login(href="/auth?mode=login")
                            i.bi.bi-box-arrow-in-right.me-1
                            span Đăng nhập
                        a.btn.btn-register(href="/auth?mode=register")
                            i.bi.bi-person-plus.me-1
                            span Đăng ký