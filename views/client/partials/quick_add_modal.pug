.modal.fade#quickAddModal(tabindex='-1' aria-hidden='true')
  .modal-dialog.modal-dialog-centered
    .modal-content
      .modal-header
        h5.modal-title Chọn sản phẩm
        button.btn-close(type='button' data-bs-dismiss='modal' aria-label='Close')
      .modal-body
        .d-flex.gap-3
          img#qamImage(src='/images/shopping.png' alt='product' style='width:96px;height:96px;object-fit:cover;border-radius:12px;')
          .flex-grow-1
            .fw-semibold#qamName —
            .text-muted.small#qamPrice —

        hr
        //- variant
        .mb-3
          .fw-semibold.mb-2 Màu sắc
          .d-flex.flex-wrap.gap-2#qamVariants
        //- size
        .mb-3#qamSizeWrap(style='display:none')
          .fw-semibold.mb-2 Kích cỡ
          .d-flex.flex-wrap.gap-2#qamSizes

        .mb-2
          .fw-semibold.mb-2 Số lượng
          .input-group(style='max-width: 180px;')
            button.btn.btn-outline-secondary(type='button' id='qamQtyMinus') -
            input.form-control.text-center(type='number' id='qamQty' value='1' min='1')
            button.btn.btn-outline-secondary(type='button' id='qamQtyPlus') +
        .small.text-muted#qamStockNote

      .modal-footer
        button.btn.btn-outline-secondary(type='button' data-bs-dismiss='modal') Hủy
        button.btn.btn-primary(type='button' id='qamSubmit') Xác nhận
